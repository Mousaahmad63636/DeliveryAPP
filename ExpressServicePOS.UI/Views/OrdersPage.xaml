<!-- File: ExpressServicePOS.UI.Views/OrdersPage.xaml -->
<Page x:Class="ExpressServicePOS.UI.Views.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpressServicePOS.UI.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="إدارة الطلبات">

    <Grid>
        <StackPanel Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="إدارة الطلبات" FontSize="24" FontWeight="Bold"/>
                <Button Grid.Column="1" Content="إضافة طلب جديد" Width="150" Height="35" Background="#3498db" 
                        Foreground="White" Click="btnAddNewOrder_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!-- Search Box -->
            <Grid Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="txtSearch" Margin="0,0,10,0" Height="30" VerticalContentAlignment="Center" KeyUp="txtSearch_KeyUp"/>
                <Button Grid.Column="1" Content="بحث" Width="100" Height="30" Background="#95a5a6" Foreground="White" Click="btnSearch_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!-- Orders List -->
            <Border BorderBrush="#ddd" BorderThickness="1">
                <DataGrid x:Name="dgOrders" AutoGenerateColumns="False" CanUserAddRows="False" 
                         CanUserDeleteRows="False" IsReadOnly="True" SelectionMode="Single"
                         MouseDoubleClick="dgOrders_MouseDoubleClick" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="رقم الطلب" Binding="{Binding OrderNumber}" Width="80"/>
                        <DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width="150"/>
                        <DataGridTextColumn Header="تاريخ الطلب" Binding="{Binding OrderDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
                        <DataGridTextColumn Header="حالة الطلب" Binding="{Binding StatusText}" Width="100"/>
                        <DataGridTextColumn Header="المبلغ" Binding="{Binding Price, StringFormat=\{0:N2\}}" Width="80"/>
                        <DataGridTextColumn Header="رسوم التوصيل" Binding="{Binding DeliveryFee, StringFormat=\{0:N2\}}" Width="100"/>
                        <DataGridTextColumn Header="الإجمالي" Binding="{Binding TotalPrice, StringFormat=\{0:N2\}}" Width="80"/>
                        <DataGridTemplateColumn Header="إجراءات" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Edit Button - Purple style to match Image 1 -->
                                        <Button Content="تعديل" Margin="0,0,5,0" Click="btnEdit_Click" Tag="{Binding Id}"
                                                Background="#8e44ad" Foreground="White" Width="60">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="3"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <!-- Print Receipt Button -->
                                        <Button Content="طباعة" Margin="0,0,5,0" Click="btnPrintReceipt_Click" Tag="{Binding Id}"
                                                Background="#2ecc71" Foreground="White" Width="60">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="3"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <!-- Delete Button - Red square style to match Image 1 -->
                                        <Button Width="30" Height="30" Click="btnDelete_Click" Tag="{Binding Id}"
                                                Background="#e74c3c" Margin="0">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                </Style>
                                            </Button.Resources>
                                            <materialDesign:PackIcon Kind="Delete" Foreground="White" Width="18" Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>
    </Grid>
</Page>